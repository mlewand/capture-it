{
  "name": "capture-it",
  "version": "0.0.1",
  "description": "A simple app for quick adding notes to your app.",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.mlewand.capture-it",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "directories": {
      "output": "release"
    }
  },
  "author": "Marek Lewandowski",
  "license": "UNLICENSED",
  "dependencies": {
    "lodash": "^4.17.21",
    "open": "8.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/lodash": "4.14.195",
    "@types/node": "^20.3.1",
    "@types/uuid": "^9.0.2",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
